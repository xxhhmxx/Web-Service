@model WebWCF.SanPhamServiceReference.SanPham

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int quantity = 0;
    WebWCF.QuanLyTonKhoServiceReference.QuanLyTonKhoClient tonkho = new WebWCF.QuanLyTonKhoServiceReference.QuanLyTonKhoClient();
    try
    {
        quantity = tonkho.TimTheoSPID(Model.SP_ID).SoLuongTon;
    }
    catch
    {
        quantity = 0;
    }

}

<div class="section group">
    <div class="cont-desc span_1_of_2">
        <div class="product-details">
            <div class="grid images_3_of_2">
                <div id="container">
                    <div id="products_example">
                        <div id="products">
                                <a href="#"><img src="@Url.Content(Model.Hinh)" alt=" " /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="desc span_3_of_2">
                <h2 style="font-size:36px">@Model.TenSP </h2>
                <table width="70%" height="100%">
                    <tr>
                        <td>Nhà sản xuất: </td>
                        <td style="color:palevioletred">@Model.NhaSX_ID</td>
                    </tr>
                    <tr>
                        <td>Màn hình:</td>
                        <td style="color:palevioletred">@Model.Manhinh pixel</td>
                    </tr>
                    <tr>
                        <td>RAM:</td>
                        <td style="color:palevioletred">@Model.RAM GB</td>
                    </tr>
                    <tr>
                        <td>CPU:</td>
                        <td style="color:palevioletred">@Model.CPU</td>
                    </tr>
                    <tr>
                        <td>Pin:</td>
                        <td style="color:palevioletred">@Model.Pin mAh</td>
                    </tr>
                </table>
                <div class="price">
                    <p>Giá: <span>@Model.DonGia VNĐ</span></p>                    
                </div>
               <div>Số lượng:  <input type="text" id="Quantity" style="max-width:30px" value="1">/ @quantity
               </div>
                @if(quantity!=0)
                { 
                <div class="share-desc">
                    <div class="button"><span><a href="#" onclick="this.href = '/Cart/AddItem/them-san-pham?productId=@Model.SP_ID&quantity='+document.getElementById('Quantity').value;  somefunction(this, event); return true;">Thêm vào giỏ hàng</a></span></div>
                    <div class="clear"></div>
                </div>
                }
                else
                {
                    <div class="share-desc">
                        <div class="button"><span><a>Hết hàng</a></span></div>
                        <div class="clear"></div>
                    </div>
                }
            </div>
            <div class="clear"></div>
        </div>
       
        <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                    type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
                });
        </script>
        
    </div>
    <div class="rightsidebar span_3_of_1">
        <h2>CATEGORIES</h2>
        <ul>
            <li><a href="/Home/Type/san-pham?nhaSxId=Sony">Sony</a></li>
            <li><a href="/Home/Type/san-pham?nhaSxId=Apple">Apple</a></li>
            <li><a href="/Home/Type/san-pham?nhaSxId=SamSung">SamSung</a></li>
            <li><a href="/Home/Type/san-pham?nhaSxId=4">HTC</a></li>
        </ul>
    </div>
</div>
