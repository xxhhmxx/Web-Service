@{
    Layout = null;
    int count = 0;
    int? total = 0;
    List<WebWCF.QuanLyDatHangService.CartItem> list = null;
    if (Session["CartItem"] != null)
    {
        list = (List<WebWCF.QuanLyDatHangService.CartItem>)Session["CartItem"];
        foreach (var item in list)
        {
            count += item.Quantity;
            total += item.Product.DonGia * item.Quantity;
        }
    }
}

